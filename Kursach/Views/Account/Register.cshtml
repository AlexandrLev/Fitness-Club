@model Kursach.Models.RegisterModel


<div class="container d-flex justify-content-center">

    <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
        <h2>Регистрация</h2>
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="form-group">
                <label asp-for="Login">Введите логин</label><br />
                <input class="form-control-sm" type="text" asp-for="Login" /><br>
                <span class="badge badge-light" asp-validation-for="Login" />
            </div>
            <div class="form-group">
                <label asp-for="LastName">Введите Фамилию</label><br />
                <input class="form-control-sm" asp-for="LastName" /><br>
                <span class="badge badge-light" asp-validation-for="LastName" />
            </div>
            <div class="form-group">
                <label asp-for="FirstName">Введите Имя</label><br />
                <input class="form-control-sm" asp-for="FirstName" /><br>
                <span class="badge badge-light" asp-validation-for="FirstName" />
            </div>
            <div class="form-group">
                <label asp-for="Patronymic">Введите Отчество</label><br />
                <input class="form-control-sm" asp-for="Patronymic" /><br>
                <span class="badge badge-light" asp-validation-for="Patronymic" />
            </div>
            <div class="form-group">
                <label asp-for="PassportData">Введите паспортные данные</label><br />
                <input class="form-control-sm" asp-for="PassportData" /><br>
                <span class="badge badge-light" asp-validation-for="PassportData" />
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input id="AccountType" class="form-check-input" type="radio" name="AccountType" value="Client" checked="checked">
                    <label class="form-check-label">
                        Клиент
                    </label>
                </div>
                <div class="form-check">
                    <input id="AccountType" class="form-check-input" type="radio" name="AccountType" value="Coach">
                    <label class="form-check-label">
                        Тренер
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Password">Введите пароль</label><br />
                <input class="form-control-sm" asp-for="Password" /><br>
                <span class="badge badge-light" asp-validation-for="Password" />
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword">Повторите пароль</label><br />
                <input class="form-control-sm" asp-for="ConfirmPassword" /><br>
                <span class="badge badge-light" asp-validation-for="ConfirmPassword" />
            </div>
            <div class="form-group">
                <input class="btn btn-light" type="submit" value="Регистрация" />
            </div>
        </div>
    </form>
</div>

@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

