@model Kursach.Models.Admin.EditMemberTicket


@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Абонемент</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditMemberTicket">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MemberTicketId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label><br>
                <input asp-for="Name" class="form-control" /><br>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cost" class="control-label"></label><br>
                <input asp-for="Cost" class="form-control" /><br>
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="GymId">Выберите фитнес-центр:</label><br>
                <select class="form-control " asp-for="GymId" asp-items="Model.Gyms">
                    <option selected="selected" value="">Выберите фитнес-клуб</option>
                </select><br>
                <span asp-validation-for="GymId" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="ValidityPeriod" class="control-label"></label><br>
                <input asp-for="ValidityPeriod" class="form-control" /><br>
                <span asp-validation-for="ValidityPeriod" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-controller="Admin" asp-action="EditDB">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}