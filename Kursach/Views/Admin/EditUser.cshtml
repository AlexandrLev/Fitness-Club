@model Kursach.Models.Admin.EditUser


@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Пользователи</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserId" />
            <div class="form-group">
                <label asp-for="Login" class="control-label"></label><br>
                <input asp-for="Login" class="form-control" /><br>
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label><br>
                <input asp-for="Password" class="form-control" /><br>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label><br>
                <input asp-for="FirstName" class="form-control" /><br>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label><br>
                <input asp-for="LastName" class="form-control" /><br>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patronymic" class="control-label"></label><br>
                <input asp-for="Patronymic" class="form-control" /><br>
                <span asp-validation-for="Patronymic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PassportData" class="control-label"></label><br>
                <input asp-for="PassportData" class="form-control" /><br>
                <span asp-validation-for="PassportData" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoleId" class="control-label"></label><br>
                <input asp-for="RoleId" class="form-control" /><br>
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="MemberTicketId">Выберите абонемент:</label><br>
                <select class="form-control " asp-for="MemberTicketId" asp-items="Model.MemberTickets">
                    <option selected="selected" value="">Выберите абонемент</option>
                </select><br>
                <span asp-validation-for="MemberTicketId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConclusionDate" class="control-label">Дата начала действия абонемента:</label><br>
                <input type="date" asp-for="ConclusionDate" class="form-control" /><br>
                <span asp-validation-for="ConclusionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-controller="Admin" asp-action="EditDB">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}