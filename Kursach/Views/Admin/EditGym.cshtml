@model Kursach.Models.Admin.EditGym


@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Фитнес-центр</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditGym">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="GymId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label><br>
                <input asp-for="Name" class="form-control" /><br>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label><br>
                <input asp-for="Address" class="form-control" /><br>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label><br>
                <input asp-for="PhoneNumber" class="form-control" /><br>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-controller="Admin" asp-action="EditDB">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}